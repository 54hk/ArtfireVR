<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 直播开关-->
    <ImageView
        android:id="@+id/ll_push"
        android:layout_width="@dimen/margin_70"
        android:layout_height="@dimen/margin_70"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="center"
        android:src="@mipmap/record_video_start">


    </ImageView>

    <LinearLayout
        android:id="@+id/ll_see_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/see_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_personal_1"
                    style="@style/apply_number_icom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_personal_2"
                    style="@style/apply_number_icom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_personal_3"
                    style="@style/apply_number_icom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_personal_4"
                    style="@style/apply_number_icom" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/listen_person_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/round_top_bottom_left_white"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:textColor="@color/contents_text"
            android:textSize="@dimen/text_12" />

    </LinearLayout>


    <!-- 工具-->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_20">

        <ImageView
            android:id="@+id/exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="@dimen/margin_3"
            android:scaleType="center"
            android:src="@mipmap/vod_play_back" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="23dp"
            android:clickable="true"
            android:padding="@dimen/margin_3"
            android:src="@mipmap/camera_id" />

        <ImageView
            android:id="@+id/flash"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/flash_selector"
            android:clickable="true"
            android:padding="@dimen/margin_3" />

        <ImageView
            android:id="@+id/beauty_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_23"
            android:background="@mipmap/beauty_on"
            android:clickable="true"
            android:padding="@dimen/margin_3" />

        <ImageView
            android:id="@+id/barrage_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_23"
            android:background="@drawable/barrage_selector"
            android:clickable="true"
            android:padding="@dimen/margin_3" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shap_gradient"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/preview_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/stop_preview_button"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/push_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/start_button"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/opera_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/pause_button"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/restart_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/repush_button"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/more_setting_button"
            android:textColor="@color/text_white" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_zan_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_28"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20">


        <TextView
            android:id="@+id/tv_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_ababab_top_bottom_left_circle"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_1"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_6"
            android:paddingTop="@dimen/margin_1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_13" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_3_"
            android:layout_toRightOf="@+id/tv_zan_num"
            android:background="@drawable/bg_ababab_circle"
            android:padding="@dimen/margin_10"
            android:src="@mipmap/go_heart" />


    </RelativeLayout>
    <!--HiPraiseAnimationView-->
    <com.artfire.ninedraw.heartanim.HiPraiseAnimationView
        android:id="@+id/praise_animation"
        android:layout_width="@dimen/margin_55"
        android:layout_height="@dimen/margin_120"
        android:layout_above="@+id/rl_zan_num"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_22" />

    <LinearLayout
        android:id="@+id/ll_lv_parent"
        android:layout_width="@dimen/margin_250"
        android:layout_height="@dimen/margin_100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_28"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/top_bar">

        <ListView
            android:id="@+id/message_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="@dimen/margin_5"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

    </LinearLayout>

</RelativeLayout>