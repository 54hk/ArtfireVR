<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_373632"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_55">
    <ImageView
        android:id="@+id/iv_artist_icon"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/margin_33"
        android:layout_height="@dimen/margin_33" />
        <RelativeLayout
            android:layout_marginRight="@dimen/margin_14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_artist_icon"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/iv_artist_name"
                android:textColor="@color/text_f4f4f4"
                android:text=""
                android:textSize="@dimen/text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_below="@+id/iv_artist_name"
                android:id="@+id/iv_artist_address"
                android:textColor="@color/text_f4f4f4"
                android:text=""
                android:textSize="@dimen/text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_marginLeft="@dimen/margin_14"
            android:background="@color/color_5b5a59"
            android:layout_height="@dimen/margin_1"
            android:layout_alignParentBottom="true"
            style="@style/line"/>
    </RelativeLayout>


</LinearLayout>
