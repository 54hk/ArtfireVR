<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/margin_308"
        android:layout_height="@dimen/margin_394">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_line_bg"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_29"
                        android:background="@mipmap/head_default" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/text_444"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_uset_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_999"
                        android:textSize="@dimen/text_9" />

                    <GridView
                        android:id="@+id/gv_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_36"
                        android:horizontalSpacing="@dimen/margin_17"
                        android:listSelector="@null"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:verticalSpacing="@dimen/margin_12" />

                    <TextView
                        android:id="@+id/tv_reward_btn"
                        android:layout_width="@dimen/margin_250"
                        android:layout_height="@dimen/margin_34"
                        android:layout_below="@+id/img_event"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_54"
                        android:background="@drawable/item_reward_bg"
                        android:gravity="center"
                        android:text="打赏"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_reward_close"
            android:padding="@dimen/margin_13"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/margin_12"
            android:layout_height="@dimen/text_12"
            android:background="@mipmap/close_reward" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
